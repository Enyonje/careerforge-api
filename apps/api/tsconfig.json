{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "lib": ["ES2021"],
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["apps/api/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*spec.ts",
    "**/*test.ts",
    "apps/api/src/test"
  ]
}